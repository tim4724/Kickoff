{
  "name": "kickoff",
  "version": "0.3.0",
  "private": true,
  "description": "Fast-paced multiplayer arcade soccer game",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev:shared": "cd shared && npm run watch",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "npx concurrently \"npm run dev:shared\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client:test": "cd client && VITE_PORT=5174 VITE_SERVER_PORT=3001 npm run dev",
    "dev:server:test": "cd server && PORT=3001 npm run dev",
    "dev:test": "npx concurrently \"npm run dev:shared\" \"npm run dev:client:test\" \"npm run dev:server:test\"",
    "build:shared": "npm run build --workspace=shared",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build": "npm run build:shared && npm run build:client && npm run build:server",
    "pretest:e2e": "npm run build:shared && npm run test:cleanup-ports",
    "test:cleanup-ports": "lsof -ti:5174 -ti:3001 2>/dev/null | xargs kill -9 2>/dev/null || true",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:clean": "npm run clean:test && npm run test:e2e",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:physics": "playwright test --project=physics-tests",
    "test:stable": "playwright test --project=stable-tests",
    "test:network": "playwright test tests/multiplayer-network-sync.spec.ts",
    "test:network:ui": "playwright test tests/multiplayer-network-sync.spec.ts --ui",
    "clean:test": "rm -rf test-results playwright-report .playwright-mcp",
    "clean:all": "npm run clean:test && npm run clean --workspaces"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "concurrently": "^8.2.2",
    "tsc-alias": "^1.8.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@colyseus/schema": "^3.0.61",
    "colyseus": "^0.16.4",
    "colyseus.js": "^0.16.21"
  }
}

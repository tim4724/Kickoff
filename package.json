{
  "name": "socca2",
  "version": "0.1.0",
  "private": true,
  "description": "Fast-paced multiplayer arcade soccer game",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev:shared": "cd shared && npm run watch",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "npx concurrently \"npm run dev:shared\" \"npm run dev:client\" \"npm run dev:server\"",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build": "npm run build:client && npm run build:server",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:network": "playwright test tests/multiplayer-network-sync.spec.ts",
    "test:network:ui": "playwright test tests/multiplayer-network-sync.spec.ts --ui",
    "clean:test": "rm -rf test-results playwright-report .playwright-mcp"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@colyseus/schema": "^3.0.61",
    "colyseus": "^0.16.4",
    "colyseus.js": "^0.16.21"
  }
}
